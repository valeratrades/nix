; general docs are at https://elkowar.github.io/eww/configuration.html

(include "revealer.yuck")


(defvar bar_visible "true")
(defvar myopia "false")
(defvar todo_timer "None")
(defvar sway_mode "default")
(defvar cargo_compiling "false")
(defvar timer "")

;;TODO!: fix the thing with overlapping on myopia=true

(defwindow bar
	:monitor 0
	:geometry (geometry :anchor "top right" :y 0 :width "0%" :height "17px")
	(box
		:class {myopia == "true" ? "myopia" : ""}
		:space-evenly false
		:visible {bar_visible == "true"}

		; ; Rendered conditionally
		(sway_mode)
		(cargo)
		(timer)
		(obs)
		(todo_timer)
		(openvpn)
		(notifications)
		(github)
		(layout)
		;

		; ; Always rendered
		(test) ;TODO: test if this is required
		(bluetooth)
		(microphone)
		(speaker)
		(ping)
		(ram)
		(cpu)
		(temperature)
		(time)
		(battery)
		(battery_saver)
		;
	)
)

;; bar modules {{{
(defwidget sway_mode []
	(box
		:visible {sway_mode != "default"}
		"#${sway_mode}"
	)
)

(defwidget timer []
	(box
		:visible {timer != ""}
		"|${timer}|"
	)
)

(defpoll layout_poll :initial "" :interval "1s" "./modules/layout.sh")
(defwidget layout []
	(box
		:visible {layout_poll != ""}
		:class "warn"
		"${layout_poll}"
	)
)


(defwidget todo_timer []
	(box
		:class "text"
		:class {substring(todo_timer,0,3) == "Out" ? "error" : substring(todo_timer,0,1) == "-" ? "warn" : ""}
		:visible {todo_timer != "None"}
		" ${todo_timer}"))

(defwidget cargo []
	(box
		:class "warn"
		:visible {cargo_compiling == "true"}
		""
	)
)

(defpoll obs_active_poll	:initial "0" :interval "10s" "./modules/obs_active.sh")
(defwidget obs []
	(box
		:class "text"
		:visible {obs_active_poll == "1"}
		" "
	)
)

(defpoll openvpn_poll :initial "0" :interval "10s" "./modules/openvpn.sh")
(defwidget openvpn []
  (box
		:visible {openvpn_poll == "1"}
		" "
	)
)

(defpoll battery_saver_poll	:initial "" :interval "5s" "./modules/battery_saver.sh")
(defwidget battery_saver [] "${battery_saver_poll}")

(defpoll battery_poll :initial "{}" :interval "5s" "./modules/battery.sh")
(defwidget battery []
	(box
		:class {battery_poll.content < 10 && battery_poll.icon != "" ? "error" : battery_poll.content < 10 && battery_poll.icon == "" ? "warn" : ""}
		:visible {battery_poll.content < 99}
		"${battery_poll.icon}${battery_poll.content}"
	)
)

(defpoll time_poll :interval "1s" "date +\"%Y/%m/%d%a%H:%M:%S\"")
(defwidget time [] "${time_poll}")

(defpoll bluetooth_connection :interval "5s" "~/nix/home/scripts/bluetooth.rs is-connected")
(defwidget bluetooth []
	(box
		:visible {bluetooth_connection != ""}
		"${bluetooth_connection}"
	)
)

(defwidget cpu []
	(box
		:class {"${round(EWW_CPU.avg, 0)}" > 90 ? "warn" : ""}
		" ${round(EWW_CPU.avg, 0)}%"))
(defwidget ram []
	(box
		:visible {EWW_RAM.used_mem_perc != ""}
		"${round(EWW_RAM.used_mem_perc, 0)}%"))

(defpoll github_poll :initial "" :interval "60s" "./modules/github.sh")
(defwidget github []
	(box
		:class "warn"
		:visible {github_poll != "" && github_poll != 0}
		"${github_poll}"))

(deflisten notifications_listen :initial '{"show": "no", "content": ""}' "./modules/notifications.sh")
(defwidget notifications []
	(box
		:visible {notifications_listen.show == "yes"}
		{notifications_listen.content}))

; Network
(defpoll ping_poll :interval "30s" "./modules/ping.sh")
(defwidget ping []
	(box
		:class {ping_poll > 150 || ping_poll == "None" ? "warn" : ""}
		" ${ping_poll == "None" ? "No WiFi" : ping_poll == "Some" ? "Some WiFi" : "${ping_poll}ms"}")) 

;; Volume ;;
(defpoll speaker_poll :initial "{}" :interval "1s" "./modules/speaker.sh")
(defwidget speaker [] "${speaker_poll.icon}${speaker_poll.content}")

(defpoll microphone_poll :initial "{}" :interval "500ms" "./modules/microphone.sh")
(defwidget microphone []
	(box
		:class {microphone_poll.content < 10 || microphone_poll.content == "" ? "warn" : ""}
		"${microphone_poll.icon}${microphone_poll.content}"
	)
)

(defpoll temperature_poll :initial "{}" :interval "15s" "./modules/temperature.sh")
(defwidget temperature []
	(box
		:space-evenly false
		(box
			:class {temperature_poll.cpu >= 70 ? "warn" : ""}
			"${temperature_poll.icon}${temperature_poll.cpu}"
		)
		(box
			:class {temperature_poll.gpu >= 70 ? "warn" : ""}
			",${temperature_poll.gpu}"
		)
	)
)

(defpoll day_ev_poll :initial "{}" :interval "5s" "./modules/day_ev.sh")
(defvar todo_milestones_hover_state false)
(defwidget test[]
	(reveal_on_hover
		:var todo_milestones_hover_state
		:varname "todo_milestones_hover_state"
		:transition "slideleft"
		:label_text "${day_ev_poll.content}"
		:label_class "${day_ev_poll.class}"
		:visible true
		(button :onclick "notify-send TODO \"Open manually for now. fuck eww.\""
			(label :class "text" :text "d")
		)
		(button :onclick "notify-send TODO"
			(label :class "text" :text "w")
		)
		(button :onclick "notify-send TODO"
			(label :class "text" :text "m")
		)
		(button :onclick "notify-send TODO"
			(label :class "text" :text "q")
		)
		(button :onclick "notify-send TODO"
			(label :class "text" :text "y")
		)
		(button :onclick "notify-send TODO"
			(label :class "text" :text "5y")
		)
	)
)
;;,}}}


(defvar btc_line_main_str "")
(defvar btc_line_additional_str "")
(defvar btc_line_spy_str "")

(defpoll btc_line_poll :initial "{\"main\": \"\", \"additional\": \"\", \"main_stale\": false}" :interval "5s" "./modules/btc_line.rs 2>/dev/null")

(defwindow btc_line_upper
	:monitor 0
	:geometry (geometry :anchor "top right" :y 20 :width "0%" :height "14px")
	(box
		:class {myopia == "true" ? "myopia" : ""}
		:visible {bar_visible == "true" && btc_line_main_str != ""}
		:space-evenly false
		"${btc_line_poll.additional != "None" ? btc_line_additional_str : ""}"
		(label :class {btc_line_poll.main_stale ? "warn" : ""} :text "")
		"${btc_line_main_str}"
	)
)

(defwindow btc_line_lower
	:monitor 0
	:geometry (geometry :anchor "top right" :y 34 :width "0%" :height "14px")
	(box
		:class {myopia == "true" ? "myopia" : ""}
		:visible {bar_visible == "true" && btc_line_spy_str != ""}
		:class "text"
		btc_line_spy_str
	)
)

(defwindow tedi_blocker
	:monitor 0
	:geometry (geometry :anchor "top right" :y 41 :width "0%" :height "0%")
	(box
		(what)
	)
)
(defvar tedi_blocker_hover_state false)
;; Can't combine these two polls, because eww doesn't work well with newlines
(defpoll tedi_blocker_last_poll :initial "" :interval "0.5s" "tedi --log-to 'eww_blocker_list' blocker current")
(defpoll tedi_blocker_list_poll :interval "5s" "tedi --log-to 'eww_blocker_list' blocker list | wrap_output.rs - -l 120")
(defwidget what[]
	(box
		:visible {bar_visible == "true"}
		:class ""
		(reveal_on_hover
			:var tedi_blocker_hover_state
			:varname "tedi_blocker_hover_state"
			:transition "none"
			:orientation "vertical"
			:label_text "${tedi_blocker_last_poll}"
			:label_class "text"
			(label :class "text" :text "${tedi_blocker_list_poll}")
		)
	)
)

;; Claude sessions widget
(defwindow claude_sessions
	:monitor 0
	:geometry (geometry :anchor "top right" :y 60 :width "0%" :height "0%")
	(box
		(claude_sessions_widget)
	)
)
(defvar claude_sessions_hover_state false)
(defvar claude_sessions_always_expand "false")
(defpoll claude_sessions_compact_poll :initial "" :interval "1s" "/home/v/nix/home/config/tmux/claude-sessions.rs -c")
(defpoll claude_sessions_full_poll :interval "3s" "/home/v/nix/home/config/tmux/claude-sessions.rs")
(defwidget claude_sessions_widget[]
	(box
		:visible {bar_visible == "true" && claude_sessions_compact_poll != ""}
		(reveal_on_hover
			:var {claude_sessions_always_expand == "true" ? true : claude_sessions_hover_state}
			:varname "claude_sessions_hover_state"
			:transition "none"
			:orientation "vertical"
			:label_text "${claude_sessions_compact_poll}"
			:label_class "text"
			(label :class "text" :text "${claude_sessions_full_poll}")
		)
	)
)
