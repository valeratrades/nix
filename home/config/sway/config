# Workspaces {{{
set $output_laptop "eDP-1"
set $output_monitor "HDMI-A-1"
set $all_possible_output_monitors "HDMI-A-1" "DP-1"
# sway circles through this space-delimited list when the first element is not found.
set $primary $all_possible_output_monitors $output_laptop
mode "monitors" {
	# in the perfect world would have primary set 
	bindsym a exec $switch_out && 'set $primary $all_possible_output_monitors $output_laptop'
	bindsym s exec $switch_out && 'set $primary $output_laptop'

	bindsym t exec $switch_out &&  swaymsg 'output $output_monitor toggle'

	bindsym $mod+k exec $switch_out
	bindsym $mod+c exec $switch_out
	bindsym $mod+q exec $switch_out
	bindsym Ctrl+c exec $switch_out
	bindsym Escape exec $switch_out
	bindsym q exec $switch_out
}
bindsym $mod+Period exec "swaymsg mode monitors && eww update sway_mode='monitors (a,s,t)'"

